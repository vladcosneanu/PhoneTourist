    <gradient
        android:angle="-90"
        android:endColor="@color/holo_green_dark"
        android:startColor="@color/holo_green_light"
        android:type="linear" />

    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

</shape>